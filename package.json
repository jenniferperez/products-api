{
  "name": "products-api",
  "version": "1.0.0",
  "description": "API RESTful para gestiÃ³n de productos con Node.js y Express",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "lint": "eslint src/",
    "lint:html": "eslint src/ --format html --output-file reports/eslint-report.html",
    "lint:json": "eslint src/ --format json --output-file reports/eslint-report.json",
    "lint:junit": "eslint src/ --format junit --output-file reports/eslint-report.xml",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "docs:generate": "swagger-jsdoc -d src/config/swaggerDef.js src/routes/*.js src/app.js -o src/docs/swagger.json",
    "docs:serve": "swagger-ui-serve src/docs/swagger.json",
    "docs:build": "npm run docs:generate && npm run docs:serve",
    "docs": "node scripts/generate-docs.js",
    "docker:build": "docker build -t products-api .",
    "docker:run": "docker run -d --name products-api-container -p 3000:3000 --restart unless-stopped products-api",
    "docker:stop": "docker stop products-api-container",
    "docker:rm": "docker rm products-api-container",
    "docker:logs": "docker logs products-api-container"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "rest",
    "products"
  ],
  "author": "Tu nombre",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-html-reporter": "^0.7.4",
    "jest": "^26.6.3",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=11.0.0"
  }
}
